@using FleetDashClient.ViewModels
@inject EveLoginViewModel _eveLoginViewModel
@inherits ComponentBase

<img id="eve-login-btn" src="/images/eve-sso-login-black-large.png" @onclick="StartAuth"/>

@code {
    [Parameter]
    public Action RefreshList { get; set; }

    private async Task StartAuth()
    {
        await _eveLoginViewModel.StartAuthAsync();
        RefreshList();
    }
}